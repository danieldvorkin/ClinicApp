- content_for(:page_title, "All Assessments")

%h1 My Assessments

%table.table
  %thead
    %tr
      %th Name
      %th Desc
      %th.text-center Active
      %th.text-center Status
      %th Created by
  %tbody
    - @assessments.each do |assignment|
      %tr
        %td= assignment.assessment.name
        %td= assignment.assessment.desc&.truncate(20)
        %td.text-center= assignment.assessment.active ? "<i class='fa fa-dot-circle text-success'></i>".html_safe : "<i class='fa fa-dot-circle text-danger'></i>".html_safe
        %td.text-center= assignment.status
        %td= assignment.assessment.created_by&.email
%br

= link_to 'New Assessment', new_assessment_path
