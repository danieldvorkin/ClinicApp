.container-fluid
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource

    %ul#myTab.nav.nav-tabs{:role => "tablist"}
      %li.nav-item
        %a#home-tab.nav-link.active{"aria-controls" => "main", "aria-selected" => "true", "data-toggle" => "tab", :href => "#main", :role => "tab"} General
      %li.nav-item
        %a#messages-tab.nav-link{"aria-controls" => "settings", "aria-selected" => "false", "data-toggle" => "tab", :href => "#settings", :role => "tab"} Additional Settings

    .tab-content
      #main.tab-pane.pt-4.active{"aria-labelledby" => "main-tab", :role => "tabpanel"}
        .row
          .form-group.col-lg-6
            = f.label :first_name
            = f.text_field :first_name, class: 'form-control'
          .form-group.col-lg-6
            = f.label :last_name
            = f.text_field :last_name, class: 'form-control'
          .form-group.col-lg-6
            = f.label :dob, "Date of Birth"
            = f.text_field :dob, class: 'form-control', placeholder: 'dd/mm/yyyy'
          .form-group.col-lg-6
            = f.label :phone
            = f.text_field :phone, class: 'form-control', placeholder: '(000)-123-1234'
          .form-group.col-lg-6
            = f.label :address, "Address/Region"
            = f.text_field :address, class: 'form-control', placeholder: 'Toronto, ON'
          .form-group.col-lg-6
            = f.label :occupation
            = f.text_field :occupation, class: 'form-control', placeholder: 'Account Executive'
        .row
          .form-group.col-12
            = f.label :email
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', value: current_user.email, disabled: true
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          .form-group.col-12
            = f.label :current_password
            = f.password_field :current_password, class: 'form-control', value: current_user.current_password

        %hr
        .row
          .col-12
            %h5 New Password
          .form-group.col-lg-6
            = f.label :password
            = f.password_field :password, autocomplete: "new-password", class: 'form-control'
          .form-group.col-lg-6
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'

        .row
          .actions.col-12
            = f.submit "Update", class: 'btn btn-info'

      #settings.tab-pane.pt-4{"aria-labelledby" => "settings-tab", :role => "tabpanel"}
        %p Additional Settings coming soon!
