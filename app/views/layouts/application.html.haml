!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset = iso-8859-1", "http-equiv" => "Content-Type"}/
    %meta{:content => "en-us", "http-equiv" => "Content-Language"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title Clinic App

    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"}
    %script{:src => "https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"}
    %link{:href => "https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css", :rel => "stylesheet"}/
    %script{:src => "https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"}
    %script{:crossorigin => "anonymous", :src => "https://kit.fontawesome.com/831259ec93.js"}
    %link{:href => "https://coreui.io/demo/free/3.4.0/css/style.css", :rel => "stylesheet"}/
    %link{:href => "https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css", :rel => "stylesheet", :type => "text/css"}/
    %script{:charset => "utf8", :src => "https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js", :type => "text/javascript"}
    %script{:charset => "utf8", :src => "https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js", :type => "text/javascript"}

  %body.c-app
    = render partial: 'layouts/sidebar'
    .c-wrapper
      = render partial: 'layouts/header'
      .c-body
        %main.c-main
          .c-body
            %main.c-main.pt-0
              .container-fluid
                .fade-in
                  .card
                    %h5.card-header= content_for?(:page_title) ? content_for(:page_title) : "#{controller.action_name} #{controller.controller_name.singularize}".titleize
                    .card-body
                      = yield
  
  = javascript_include_tag "https://cdn.jsdelivr.net/npm/signature_pad@2.3.2/dist/signature_pad.min.js", "https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js", "https://coreui.io/demo/free/3.4.0/vendors/@coreui/coreui/js/coreui.bundle.min.js", "https://cdn.jsdelivr.net/npm/chart.js@3.5.0/dist/chart.min.js"